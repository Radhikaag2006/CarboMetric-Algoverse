<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Circular Icon with Border -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_border_green"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_transport_icon" />
        </FrameLayout>

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us about your transport transaction."
            android:textColor="#B8FF57"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Mode of Transport -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode of Transport"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etMode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="e.g. Bus, Train"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"/>

        <!-- Distance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Distance (in km)"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:hint="Enter distance"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"/>

        <!-- Mode Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode Selection"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerTransport"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Travel Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How did you travel?"
            android:textColor="#FFFFFF"/>

        <Spinner
            android:id="@+id/spinnerTravelType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Travel"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="Select date"
            android:focusable="false"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of Travel"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:hint="Select time"
            android:focusable="false"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginTop="8dp" />


    </LinearLayout>
</ScrollView>

